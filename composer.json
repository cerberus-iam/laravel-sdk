{
  "name": "cerberus/laravel-iam",
  "description": "Laravel bridge for the Cerberus IAM platform providing guard, middleware, and HTTP client integration.",
  "keywords": [
    "laravel",
    "iam",
    "identity",
    "authentication",
    "authorization",
    "oauth2",
    "cerberus",
    "multi-tenancy",
    "access-control",
    "user-management"
  ],
  "homepage": "https://github.com/cerberus-iam/laravel-iam",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Cerberus IAM Team",
      "email": "team@cerberus-iam.dev"
    }
  ],
  "support": {
    "issues": "https://github.com/cerberus-iam/laravel-iam/issues",
    "source": "https://github.com/cerberus-iam/laravel-iam"
  },
  "require": {
    "php": "^8.2",
    "illuminate/auth": "^10.0|^11.0",
    "illuminate/config": "^10.0|^11.0",
    "illuminate/contracts": "^10.0|^11.0",
    "illuminate/http": "^10.0|^11.0",
    "illuminate/session": "^10.0|^11.0",
    "illuminate/routing": "^10.0|^11.0",
    "illuminate/support": "^10.0|^11.0",
    "jerome/fetch-php": "^3.2",
    "jerome/filterable": "^2.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0",
    "pestphp/pest": "^2.0|^3.0",
    "pestphp/pest-plugin-laravel": "^2.0|^3.0",
    "laravel/pint": "^1.25",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "CerberusIAM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CerberusIAM\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "CerberusIAM\\CerberusIamServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "pest",
    "test:coverage": "pest --coverage",
    "lint": "pint",
    "lint:test": "pint --test",
    "analyse": "phpstan analyse",
    "ci": [
      "@lint:test",
      "@analyse",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
